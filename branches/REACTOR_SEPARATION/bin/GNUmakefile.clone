#----------------------------------------------------------------------------
#
# $Id$
#
#        GNUmakefile for clone
#
# This makefile can build clone.  clone must not use any ACE pieces, since
# it's building a clone of the source tree and it can't have done a build
# yet.  This Makefile is distributed so as to be able to build
# clone without changes.
#----------------------------------------------------------------------------

#----------------------------------------------------------------------------
#        Include macros and targets
#----------------------------------------------------------------------------

include $(ACE_ROOT)/include/makeinclude/platform_macros.GNU

CFILES   = clone.cpp
OFILES   = clone.o
DFLAGS   = -b elf
CCFLAGS += -I$(ACE_ROOT)

#############################################################################
# C++ directives

.SUFFIXES: .cpp
.cpp.o:
	$(CXX) $(CCFLAGS) -c $<
#############################################################################

clone: $(OFILES)
	$(CXX) $(CCFLAGS) -o $@ $(OFILES)

clean:
	-$(RM) $(OFILES)
realclean: clean
	-$(RM) clone

#----------------------------------------------------------------------------
#        Local targets
#----------------------------------------------------------------------------

#----------------------------------------------------------------------------
#        Dependencies
#----------------------------------------------------------------------------
# DO NOT DELETE THIS LINE -- g++dep uses it.
# DO NOT PUT ANYTHING AFTER THIS LINE, IT WILL GO AWAY.

clone.o: clone.cpp \
  $(ACE_ROOT)/ace/OS_NS_stdio.h \
  $(ACE_ROOT)/ace/OS_NS_dirent.h \
  $(ACE_ROOT)/ace/OS_NS_string.h

# IF YOU PUT ANYTHING HERE IT WILL GO AWAY
