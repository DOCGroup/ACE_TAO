project(*application): messaging, rteventexe, rtevent_serv, naming {
  after  += ECMcastTests_lib
  libs     += ECMcastTests

  specific (automake) {
    includes += $(srcdir)/../Common
  } else {
    includes += ../Common
  }

  exename   = application

  Source_Files {
    application.cpp
  }
}

project(*gateway-ec): messaging, rteventexe, rtevent_serv, naming {
  after  += ECMcastTests_lib
  libs     += ECMcastTests

  specific (automake) {
    includes += $(srcdir)/../Common
  } else {
    includes += ../Common
  }

  exename   = gateway-ec

  Source_Files {
    gateway-ec.cpp
  }
}
