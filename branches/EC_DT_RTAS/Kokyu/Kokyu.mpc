  Template_Files {
    Kokyu_dsrt.cpp
    DSRT_Direct_Dispatcher_Impl_T.cpp
    DSRT_Dispatcher_Impl_T.cpp
    DSRT_Dispatch_Item_T.cpp
    DSRT_Sched_Queue_T.cpp    
  }
}


