TAO_IDL = ../../../bin/tao_idl
IDL_FILES = struct
IDL_SRC = $(foreach ext, C.cpp S.cpp, $(foreach file, $(IDL_FILES), $(file)$(ext)))

FILES = \
  struct_client \
  structC \
  structS

#----------------------------------------------------------------------------
#       Include macros and targets
