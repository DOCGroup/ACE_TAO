project(*supplier): messaging, rteventexe, rtevent_serv, naming {
  after  += ECMcastTests_lib
  libs     += ECMcastTests
  libpaths += ../Common

  specific (automake) {
    includes += $(srcdir)/../Common
  } else {
    includes += ../Common
  }

  exename   = supplier

  Source_Files {
    supplier.cpp
