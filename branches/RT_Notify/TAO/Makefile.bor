#
# Makefile for building	ACE and	TAO
#

!ifndef	BUILD
BUILD =	typical
!endif

!if $(BUILD) ==	minimal

DIRS = \
	..\ace \
	..\apps\gperf\src \
        ..\ACEXML \
	tao \
	TAO_IDL	\
	orbsvcs

!elif $(BUILD) == typical

DIRS = \
	..\ace \
	..\apps\gperf\src \
        ..\ACEXML \
	tao \
	TAO_IDL	\
	orbsvcs	\
	utils

!elif $(BUILD) == all

DIRS = \
	..\ace \
	..\apps	\
	..\netsvcs \
	..\tests \
        ..\examples \
        ..\performance-tests \
        ..\ACEXML \
        ..\ACEXML\tests \
	tao \
	TAO_IDL	\
	orbsvcs	\
	examples \
	tests \
        performance-tests \
        orbsvcs\tests \
	utils

!elif $(BUILD) == nightlybuild

DIRS = \
	tao \
	TAO_IDL	\
	orbsvcs	\
	examples \
	tests \
        performance-tests \
        orbsvcs\tests \
	utils

!else
!error Please set your BUILD variable to one of	"minimal", "typical", "NIGHTLYBUILD", or "all".
!endif

!include <$(ACE_ROOT)\include\makeinclude\recurse.bor>
