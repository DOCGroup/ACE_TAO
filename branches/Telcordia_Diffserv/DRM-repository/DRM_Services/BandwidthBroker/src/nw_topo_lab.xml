<?xml version = "1.0" encoding = "UTF-8"?>
<!--$Id$-->
<!-- Name: networkTopologyLab.xml, Network Topology Sample File -->

<!-- Date: Updated: April 13, 2004 -->

<!-- Purpose:  This file defines (an instance of) the network toplogy (for the ARMS OEP): routers/switches and their interconnection. The relationship between hosts and edge routers are also defined -->

<!-- See  p. 19, Section 3.2.1.1.2, 3.2.1.1.2, 	Network Resource Specifications
Dynamic Resource Management Functional Capability Document For the U.S. Navy, Sept. 2003   -->

<!-- Usage:  This file will be read in by the Telcordia network resource management software, 
the Bandwidth Broker.  This reading in this network configuration information does not exclude future network disovery  during initialization/operations -->

<arms:networkTopology xmlns:arms="www.darpa.mil/ARMS" 
		      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		      xsi:schemaLocation="www.darpa.mil/ARMS networkTopology.xsd">

  <arms:topologyName>ARMSOEPToplogy </arms:topologyName>
  <arms:switchList>

    <!-- ==================================================
	 A network configuration has one or more switches/routers
	 ================================================== -->

    <!-- A switch can be a Layer2 Switch or Layer 3 Router -->
    <arms:switch>
      <!-- If L3 capable, it is a router or it is a Layer 2 switch -->
      <arms:isL3Capable>true</arms:isL3Capable>  
      
      <!-- is it an edge router/switch? -->
      <arms:isItEdge>true</arms:isItEdge>     

      <!-- internalID of the switch/router -->
      <arms:internalID>LA</arms:internalID>    
      <!--managedElement is a fully qualified DNS name for the
           router/switch so as to to able to talk to the switch/router
           by the flowProvisioner; -->
      <arms:managedElementID>192.4.20.67</arms:managedElementID>         
      
      <!-- user ID, password, enble pasword are for logging into the
           router/swtich for configuring and enabling new switch
           configuration and doing privilege operations -->
      
      <arms:userID>armsuser1</arms:userID>
      <arms:password>lessprivPassword</arms:password>
      <arms:enPassword>privPassword</arms:enPassword>
      <arms:physicalLocation>leap frog lab</arms:physicalLocation>
      <arms:switchID>manufacturerID1</arms:switchID>
      <arms:switchType>Cisco 3620</arms:switchType>
      <arms:operatingSystem>
	<arms:name>IOS</arms:name>
	<arms:version>12.0</arms:version>
      </arms:operatingSystem>
    </arms:switch>

    <arms:switch>                       
      <!--A L3 router -->
      <arms:isL3Capable>true</arms:isL3Capable>
      <arms:isItEdge>true</arms:isItEdge>
      <arms:internalID>BOS</arms:internalID>                   
      <arms:managedElementID>192.4.20.78</arms:managedElementID>                        
      <arms:userID>armsuser001</arms:userID>
      <arms:password>lessPrivPassword</arms:password>
      <arms:enPassword>privPassword</arms:enPassword>
      <arms:switchID>manfacturerID2</arms:switchID>
      <arms:switchType>Cisco 3620</arms:switchType>
      <arms:operatingSystem>
	<arms:name>IOS</arms:name>
	<arms:version>12.0</arms:version>
      </arms:operatingSystem>
    </arms:switch> 	  
  

  <arms:switch>                       
      <!--A L3 router -->
      <arms:isL3Capable>true</arms:isL3Capable>
      <arms:isItEdge>true</arms:isItEdge>
      <arms:internalID>DC</arms:internalID>                   
      <arms:managedElementID>192.4.20.79</arms:managedElementID>                        
      <arms:userID>armsuser001</arms:userID>
      <arms:password>lessPrivPassword</arms:password>
      <arms:enPassword>privPassword</arms:enPassword>
      <arms:switchID>manfacturerID2</arms:switchID>
      <arms:switchType>Cisco 3620</arms:switchType>
      <arms:operatingSystem>
	<arms:name>IOS</arms:name>
	<arms:version>12.0</arms:version>
      </arms:operatingSystem>
    </arms:switch> 	  
  </arms:switchList>

  
  <arms:L3InterfaceList>   
    <!-- List all the interfaces of all the L3 routers  -->
    
    <arms:L3Interface>                       
      <!-- internalID of the interface -->
      <arms:internalID>interface001</arms:internalID>     
      
      <!-- routerInternalID relates this Interface to the router it
           belongs to -->
      <arms:routerInternalID>LA</arms:routerInternalID>     
      
      <!-- interfaceID is either of the form technology/slot/port or
           technology chassis/slot/port -->
      <arms:interfaceID>Ethernet1/0</arms:interfaceID>
      <arms:IPAddress>172.16.15.2</arms:IPAddress>
      <arms:IPSubnetMask>255.255.255.0</arms:IPSubnetMask>
      <arms:bandwidthOutbitspersec>10000</arms:bandwidthOutbitspersec>
      <arms:bandwidthInbitspersec>10000</arms:bandwidthInbitspersec>       
    </arms:L3Interface>

    <arms:L3Interface>        
      <arms:internalID>interface002</arms:internalID>                              
      <arms:routerInternalID>LA</arms:routerInternalID>
      <arms:interfaceID>Ethernet1/1</arms:interfaceID>
      <arms:IPAddress>172.16.14.1</arms:IPAddress>
      <arms:IPSubnetMask>255.255.255.0</arms:IPSubnetMask>
      <arms:bandwidthOutbitspersec>10000</arms:bandwidthOutbitspersec>
      <arms:bandwidthInbitspersec>10000</arms:bandwidthInbitspersec>       
    </arms:L3Interface>

    <arms:L3Interface>        
      <arms:internalID>interface003</arms:internalID>                              
      <arms:routerInternalID>BOS</arms:routerInternalID>
      <arms:interfaceID>Ethernet1/1</arms:interfaceID>
      <arms:IPAddress>172.16.15.1</arms:IPAddress>
      <arms:IPSubnetMask>255.255.255.0</arms:IPSubnetMask>
      <arms:bandwidthOutbitspersec>10000</arms:bandwidthOutbitspersec>
      <arms:bandwidthInbitspersec>10000</arms:bandwidthInbitspersec>       
    </arms:L3Interface>
  
    <arms:L3Interface>        
      <arms:internalID>interface004</arms:internalID>                              
      <arms:routerInternalID>BOS</arms:routerInternalID>
      <arms:interfaceID>Ethernet1/2</arms:interfaceID>
      <arms:IPAddress>172.16.13.1</arms:IPAddress>
      <arms:IPSubnetMask>255.255.255.0</arms:IPSubnetMask>
      <arms:bandwidthOutbitspersec>10000</arms:bandwidthOutbitspersec>
      <arms:bandwidthInbitspersec>10000</arms:bandwidthInbitspersec>       
    </arms:L3Interface>
  
    <arms:L3Interface>        
      <arms:internalID>interface005</arms:internalID>                              
      <arms:routerInternalID>DC</arms:routerInternalID>
      <arms:interfaceID>Ethernet1/0</arms:interfaceID>
      <arms:IPAddress>172.16.15.3</arms:IPAddress>
      <arms:IPSubnetMask>255.255.255.0</arms:IPSubnetMask>
      <arms:bandwidthOutbitspersec>10000</arms:bandwidthOutbitspersec>
      <arms:bandwidthInbitspersec>10000</arms:bandwidthInbitspersec>       
    </arms:L3Interface>

  </arms:L3InterfaceList>
  
   <arms:L2InterfaceList>
   </arms:L2InterfaceList>
    
  <arms:subnetToEdgeInterfaceList>               
    <!-- ==================================================
	 subnetToEdgeInterface 
	 For every subnet containing hosts, the edge router side
	 interface info
	 ================================================== -->
    <arms:subnetToEdgeInterface>
      <arms:internalID>subnet011</arms:internalID>
      <arms:subnetAddress>172.16.14.0</arms:subnetAddress>
      <arms:IPSubnetMask>255.255.255.0</arms:IPSubnetMask>
      <arms:bandwidthOutbitspersec>100000</arms:bandwidthOutbitspersec>
      <arms:bandwidthInbitspersec>100000</arms:bandwidthInbitspersec>
      <arms:edgeRouterInterfaceID>LA</arms:edgeRouterInterfaceID> 
      <arms:edgeRouterinterfaceIPaddress>172.16.14.1</arms:edgeRouterinterfaceIPaddress> 
    </arms:subnetToEdgeInterface> 

    <arms:subnetToEdgeInterface> 
      <arms:internalID>subnet021</arms:internalID>
      <arms:subnetAddress>172.16.13.0</arms:subnetAddress>
      <arms:IPSubnetMask>255.255.255.0</arms:IPSubnetMask>
      <arms:bandwidthOutbitspersec>100000</arms:bandwidthOutbitspersec>
      <arms:bandwidthInbitspersec>100000</arms:bandwidthInbitspersec>
      <arms:edgeRouterInterfaceID>BOS</arms:edgeRouterInterfaceID> 
      <arms:edgeRouterinterfaceIPaddress>172.16.13.1</arms:edgeRouterinterfaceIPaddress> 
    </arms:subnetToEdgeInterface> 
  </arms:subnetToEdgeInterfaceList>
</arms:networkTopology>