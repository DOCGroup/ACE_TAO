           Controller_stub

  libs += Output_Adapter_stub  \
          Controller_stub \
          Output_Adapter_Interface_stub \
          TargetManager_stub                   \
          NodeManager_stub \
          Monitor_stub

  sharedname = DAnCE_Output_Adapter_stub
