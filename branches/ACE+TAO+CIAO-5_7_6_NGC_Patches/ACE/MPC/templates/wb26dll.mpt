  c_nondbgflags = -O2 -fstrength-reduce -fno-builtin
  ar_flags = crus
  ar_dbgflags =
  ar_nondbgflags =
  part_flags =
  part_dbgflags =
  part_nondbgflags =
  linker_flags = -T $(WIND_BASE)/target/h/tool/gnu/ldscripts/link.OUT
