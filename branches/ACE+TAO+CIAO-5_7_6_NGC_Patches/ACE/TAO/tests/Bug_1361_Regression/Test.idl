#ifndef Test__idl_
#define Test__idl_

module Test
{
  typedef sequence<octet> Payload;
  interface Echo
  {
    void echo_payload(in Payload data);
    void echo_payload_out(out Payload data);
  };

  interface Echo_Caller
  {
    void start_task(in Echo client);

    oneway void shutdown();
  };
};

#endif /* Test__idl_ */
