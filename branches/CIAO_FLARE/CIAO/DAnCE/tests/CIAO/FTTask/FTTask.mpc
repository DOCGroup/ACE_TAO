  includes += $(TAO_ROOT)/orbsvcs/orbsvcs/LWFT

  sharedname = FTTask_stub
  dynamicflags   = FTTASK_STUB_BUILD_DLL
  libs += LWFT_Common LWFT_StateSyncAgent

  IDL_Files {
  }

