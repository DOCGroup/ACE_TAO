// -*- MPC -*-
// $Id$

project(*IDL): taoidldefaults, strategies {
  IDL_Files {
    cubit.idl
  }
  custom_only = 1
}

project(*server): taoexe, utils, portableserver, strategies {
  after += *IDL

  Source_Files {
    Timer.cpp
    Cubit_Task.cpp
    Globals.cpp
    cubit_i.cpp
    server.cpp
    cubitS.cpp
    cubitC.cpp
  }

  IDL_Files {
  }
}

project(*client): taoexe, utils, portableserver, strategies {
  after += *IDL

  Source_Files {
    Timer.cpp
    Globals.cpp
    cubit_i.cpp
    Cubit_Task.cpp
    Util_Thread.cpp
    Task_Client.cpp
    client.cpp
    cubitS.cpp
    cubitC.cpp
  }

  IDL_Files {
  }

  verbatim(gnuace, local) {
    LDLIBS += $(MATHLIB)
  }
}
