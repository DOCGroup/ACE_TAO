// -*- MPC -*-
// $Id$

project(JAWS) : ace_output, acelib {
  sharedname   = JAWS
  dynamicflags = ACE_BUILD_SVC_DLL
  requires    += ace_filecache
  avoids      += uses_wchar
  avoids      += ace_for_tao

  Source_Files {
    HTTP_Server.cpp
    HTTP_Config.cpp
    HTTP_Handler.cpp
    HTTP_Helpers.cpp
    JAWS_Pipeline.cpp
    JAWS_Concurrency.cpp
    HTTP_Request.cpp
    HTTP_Response.cpp
    Parse_Headers.cpp
    IO.cpp
  }
}

project(JAWS_server) : aceexe {
  exename = main
  after += JAWS
  libs  += JAWS
  requires += ace_filecache
  avoids += uses_wchar
  avoids += ace_for_tao

  Source_Files {
    main.cpp
  }
}
