  IDL_Files {
    NodeDaemon.idl
  }

  Source_Files {
    NodeDaemonC.cpp
    DaemonController.cpp
    controller_i.cpp
    Daemon_Commands.cpp
    Softpkg_Commands.cpp
  }
}
