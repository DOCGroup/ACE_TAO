project(Node_Daemon): ciao_server, iortable {
  requires += dnc
  IDL_Files {
    NodeDaemon.idl
  }

  Source_Files {
    NodeDaemonC.cpp
    NodeDaemonS.cpp
    NodeDaemon_Impl.cpp
    Node_Daemon.cpp
  }
}

project(NodeDaemonController) : ciao_server, acexml, rtcorba {
