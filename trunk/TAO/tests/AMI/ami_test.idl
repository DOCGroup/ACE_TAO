module A
  {
    exception DidTheRightThing {
      long id;
      string whatDidTheRightThing;
    };

    interface AMI_Test
      {
        long foo (out long out_l,
                  in long in_l,
                  in string in_str)
          raises (DidTheRightThing);

        attribute long yadda;

        oneway void shutdown ();

        void inout_arg_test (inout string str);
      };

  };
