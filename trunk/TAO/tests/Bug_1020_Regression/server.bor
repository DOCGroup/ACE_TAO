	$(OBJDIR)\TestS.obj \
        $(OBJDIR)\Echo_Callback.obj \
        $(OBJDIR)\Server_Task.obj \
        $(OBJDIR)\ORB_Task.obj \
        $(OBJDIR)\Server_i.obj \
