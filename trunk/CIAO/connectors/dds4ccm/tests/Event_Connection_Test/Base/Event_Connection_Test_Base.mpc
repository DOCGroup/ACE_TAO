  dynamicflags += EVENT_CONNECTION_TEST_BASE_STUB_BUILD_DLL
  libout = ../lib

  idlflags += -SS -Gxhst -Sci \
              -Wb,stub_export_macro=EVENT_CONNECTION_TEST_BASE_STUB_Export \
              -Wb,stub_export_include=Event_Connection_Test_Base_stub_export.h

