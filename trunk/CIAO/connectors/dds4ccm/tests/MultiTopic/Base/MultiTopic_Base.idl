};
#if defined DDS4CCM_NEEDS_SEQUENCES_DEFINED
typedef sequence<ShapeType> ShapeTypeSeq;
#endif
#if defined DDS4CCM_NEEDS_SEQUENCES_DEFINED
typedef sequence<Attributes> AttributesSeq;
