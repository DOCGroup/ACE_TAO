project(DDS_Writer_Base_idl_gen) : taoidldefaults, anytypecode {
  custom_only = 1
  idlflags -= -St -Sa
  idlflags += -SS -Gxhst \
              -Wb,stub_export_macro=WRITER_BASE_STUB_Export \
              -Wb,stub_export_include=Writer_Base_stub_export.h

  IDL_Files {
    Writer_Base.idl
  }
}

project(DDS_Writer_Base_ndds_ts_gen) : ndds_ts_defaults   {
  custom_only = 1
  after += DDS_Writer_Base_idl_gen
  ndds_ts_flags += -corba Writer_BaseC.h -orb ACE_TAO1.7

  NDDSTypeSupport_Files {
    Writer_Base.idl
  }
}

project(DDS_Writer_Base_NDDS_TS) : nddslib, taolib {
  after += DDS_Writer_Base_ndds_ts_gen DDS_Writer_Base_stub
  libs += DDS_Writer_Base_stub
  libout = ../lib
  libpaths    += ../lib
  sharedname = DDS_Writer_Base_NDDS_TS
  dynamicflags = NDDS_USER_DLL_EXPORT

  verbatim(gnuace, macros) {
    override no_hidden_visibility = 1
  }

  Source_Files {
    Writer_Base.cxx
    Writer_BasePlugin.cxx
    Writer_BaseSupport.cxx
  }

  Header_Files {
    Writer_Base.h
    Writer_BasePlugin.h
    Writer_BaseSupport.h
  }

  Inline_Files {
  }
}

project(DDS_Writer_Base_stub) : ccm_stub {
  after += DDS_Writer_Base_idl_gen
  libout = ../lib
  libpaths += ../lib
  sharedname = DDS_Writer_Base_stub
  dynamicflags = WRITER_BASE_STUB_BUILD_DLL

  IDL_Files {
  }

  Source_Files {
    Writer_BaseC.cpp
  }

  Header_Files {
    Writer_BaseC.h
    Writer_Base_stub_export.h
  }

  Inline_Files {
    Writer_BaseC.inl
  }
}

