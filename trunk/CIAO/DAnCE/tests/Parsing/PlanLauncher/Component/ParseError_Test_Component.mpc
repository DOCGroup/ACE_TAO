// $Id$

project(ParseError_Test_Component_idl_gen) : componentidldefaults {
  custom_only = 1
  idlflags += -Wb,stub_export_macro=COMPONENT_STUB_Export \
              -Wb,stub_export_include=Component_stub_export.h \
              -Wb,skel_export_macro=COMPONENT_SVNT_Export \
              -Wb,skel_export_include=Component_svnt_export.h \
              -Wb,svnt_export_macro=COMPONENT_SVNT_Export \
              -Wb,svnt_export_include=Component_svnt_export.h \
              -Wb,exec_export_macro=COMPONENT_EXEC_Export \
              -Wb,exec_export_include=Component_exec_export.h -I..

  IDL_Files {
    ParseError_Test_Component.idl
  }
}

project(ParseError_Test_Component_lem_gen) : ciaoidldefaults {
  after += ParseError_Test_Component_idl_gen
  custom_only = 1
  idlflags += -Wb,stub_export_macro=COMPONENT_LEM_STUB_Export \
              -Wb,stub_export_include=Component_lem_stub_export.h \
              -SS -Gxhst -I..

  IDL_Files {
    ParseError_Test_ComponentE.idl
  }
}

project(ParseError_Test_Component_lem_stub) : ccm_svnt {
  after += ParseError_Test_Component_lem_gen ParseError_Test_Component_stub
  libs  +=  Component_stub
  libpaths += ../lib
  libout = ../lib
  includes += ..
  sharedname = Component_lem_stub
  dynamicflags += COMPONENT_LEM_STUB_BUILD_DLL

  IDL_Files {
  }

  Source_Files {
    ParseError_Test_ComponentEC.cpp
  }

  Header_Files {
    ParseError_Test_ComponentEC.h
    Component_lem_stub_export.h
  }

  Inline_Files {
    ParseError_Test_ComponentEC.inl
  }
}

project(ParseError_Test_Component_stub) : ccm_stub {
  after += ParseError_Test_Component_idl_gen
  libpaths += ../lib
  libout = ../lib
  includes += ..
  sharedname = Component_stub
  dynamicflags += COMPONENT_STUB_BUILD_DLL

  IDL_Files {
  }

  Source_Files {
    ParseError_Test_ComponentC.cpp
  }

  Header_Files {
    ParseError_Test_ComponentC.h
    Component_stub_export.h
  }

  Inline_Files {
    ParseError_Test_ComponentC.inl
  }
}

project(ParseError_Test_Component_exec) : ciao_executor {
  after   += ParseError_Test_Component_lem_stub ParseError_Test_Component_stub
  sharedname = Component_exec
  libs += Component_stub Component_lem_stub
  libpaths += ../lib
  libout = ../lib
  includes += ..
  dynamicflags += COMPONENT_EXEC_BUILD_DLL

  IDL_Files {
  }

  Source_Files {
    ParseError_Test_Component_exec.cpp
  }

  Header_Files {
    ParseError_Test_Component_exec.h
    Component_exec_export.h
  }

  Inline_Files {
  }
}


project(ParseError_Test_Component_svnt) : ciao_servant {
  after      += ParseError_Test_Component_lem_stub \
                ParseError_Test_Component_exec
  sharedname  = Component_svnt
  libs       += Component_stub Component_lem_stub \
                Component_exec
  libpaths += ../lib
  libout = ../lib
  includes += ..
  dynamicflags += COMPONENT_SVNT_BUILD_DLL

  IDL_Files {
  }

  Source_Files {
    ParseError_Test_ComponentS.cpp
    ParseError_Test_Component_svnt.cpp
  }

  Header_Files {
    ParseError_Test_ComponentS.h
    ParseError_Test_Component_svnt.h
    Component_svnt_export.h
  }

  Inline_Files {
    ParseError_Test_ComponentS.inl
  }
}


