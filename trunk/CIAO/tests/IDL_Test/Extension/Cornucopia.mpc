// $Id$

project(Cornucopia_Ext_idl_gen) : componentidldefaults {
  custom_only = 1
  idlflags += -Wb,stub_export_macro=CORNUCOPIA_STUB_Export \
              -Wb,stub_export_include=Cornucopia_stub_export.h \
              -Wb,skel_export_macro=CORNUCOPIA_SKEL_Export \
              -Wb,skel_export_include=Cornucopia_skel_export.h \
              -Wb,svnt_export_macro=CORNUCOPIA_SVNT_Export \
              -Wb,svnt_export_include=Cornucopia_svnt_export.h \
              -Wb,exec_export_macro=CORNUCOPIA_EXEC_Export \
              -Wb,exec_export_include=Cornucopia_exec_export.h \
              -Wb,ciao_container_type=Extension \
              -Gex -Gxhst -Gxhsk -Gxhsv -Gxhex

  IDL_Files {
    Cornucopia.idl
  }
}

project(Cornucopia_Ext_lem_gen) : ciaoidldefaults {
  custom_only = 1
  after += Cornucopia_Ext_idl_gen
  idlflags += -Wb,export_macro=CORNUCOPIA_EXEC_Export \
              -Wb,export_include=Cornucopia_exec_export.h \
              -Wb,ciao_container_type=Extension \
              -SS

  IDL_Files {
    CornucopiaE.idl
  }
}

project(Cornucopia_Ext_stub) : ccm_stub {
  after += Cornucopia_Ext_idl_gen

  sharedname = Cornucopia_stub
  dynamicflags += CORNUCOPIA_STUB_BUILD_DLL

  IDL_Files {
  }

  Source_Files {
    CornucopiaC.cpp
  }

  Header_Files {
    CornucopiaC.h
    Cornucopia_stub_export.h
  }

  Inline_Files {
    CornucopiaC.inl
  }
}

project(Cornucopia_Ext_exec) : ciao_executor, ccm_extension_stub {
  after   += Cornucopia_Ext_lem_gen Cornucopia_Ext_stub
  sharedname = Cornucopia_exec
  libs += Cornucopia_stub

  dynamicflags += CORNUCOPIA_EXEC_BUILD_DLL

  IDL_Files {
  }

  Source_Files {
    CornucopiaEC.cpp
    Cornucopia_exec.cpp
  }

  Header_Files {
    CornucopiaEC.h
    Cornucopia_exec.h
    Cornucopia_exec_export.h
  }

  Inline_Files {
    CornucopiaEC.inl
  }
}

project(Cornucopia_Ext_skel) : ccm_svnt, ccm_extension_stub {
  after += Cornucopia_Ext_stub
  sharedname = Cornucopia_skel
  libs += Cornucopia_stub

  dynamicflags += CORNUCOPIA_SKEL_BUILD_DLL

  IDL_Files {
  }

  Source_Files {
    CornucopiaS.cpp
  }

  Header_Files {
    CornucopiaS.h
    Cornucopia_skel_export.h
  }

  Inline_Files {
    CornucopiaS.inl
  }
}

project(Cornucopia_Ext_svnt) : ciao_servant, ccm_extension_stub {
  after      += Cornucopia_Ext_exec Cornucopia_Ext_skel Cornucopia_Ext_stub
  sharedname  = Cornucopia_svnt
  libs       += Cornucopia_exec \
                Cornucopia_skel \
                Cornucopia_stub

  dynamicflags += CORNUCOPIA_SVNT_BUILD_DLL

  IDL_Files {
  }

  Source_Files {
    Cornucopia_svnt.cpp
  }

  Header_Files {
    Cornucopia_svnt.h
    Cornucopia_svnt_export.h
  }

  Inline_Files {
  }
}

