#
# Makefile flags for recursive invocations of make
#

!ifdef DEBUG
DEBUG_FLAG = -DDEBUG 
!endif

!ifdef STATIC
STATIC_FLAG = -DSTATIC
!endif

!ifdef PASCAL
PASCAL_FLAG = -DPASCAL
!endif

!ifdef CODEGUARD
CODEGUARD_FLAG = -DCODEGUARD
!endif

!ifdef INSTALL_DIR
INSTALL_DIR_FLAG = -DINSTALL_DIR=$(INSTALL_DIR)
!endif

MAKE_FLAGS = $(DEBUG_FLAG) $(STATIC_FLAG) $(PASCAL_FLAG) \
       $(CODEGUARD_FLAG) $(INSTALL_DIR_FLAG)
