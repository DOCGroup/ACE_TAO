#
# Makefile for building the Secure_Invocation test
#

!ifdef SSL_ROOT
NAME = client
!endif

TAO_IDL = $(CORE_BINDIR)\tao_idl -g $(CORE_BINDIR)\gperf.exe -Ge 1

OBJFILES = \
	$(OBJDIR)\FooC.obj \
	$(OBJDIR)\client.obj

CFLAGS = \
	$(ACE_CFLAGS) \
	$(TAO_CFLAGS) \
	$(TAO_PORTABLESERVER_CFLAGS) \
	$(TAO_MESSAGING_CFLAGS) \
	$(ACE_SSL_CFLAGS) \
	$(SSL_CFLAGS) \
	$(TAO_SECURITY_CFLAGS) \
	$(TAO_SSLIOP_CFLAGS)

LIBFILES = \
	$(ACE_LIB) \
	$(TAO_LIB) \
	$(TAO_PORTABLESERVER_LIB) \
	$(TAO_MESSAGING_LIB) \
	$(ACE_SSL_LIB) \
        $(SSL_LIB) \
        $(TAO_SECURITY_LIB) \
        $(TAO_SSLIOP_LIB)

IDLFILES = \
	$(IDLDIR)\Foo.idl

CPPDIR = .

IDLDIR = .

!include <$(ACE_ROOT)\include\makeinclude\build_exe.bor>

#
# IDL Build rules
#

$(IDLDIR)\FooS.cpp $(IDLDIR)\FooC.cpp: $(IDLDIR)\Foo.idl
	$(TAO_IDL) $**
