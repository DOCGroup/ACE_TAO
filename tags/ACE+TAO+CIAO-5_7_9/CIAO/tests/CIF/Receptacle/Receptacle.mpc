// $Id$

project(Receptacle_idl_gen) : componentidldefaults {

  custom_only = 1
  idlflags += -Wb,stub_export_macro=RECEPTACLE_STUB_Export \
              -Wb,stub_export_include=Receptacle_stub_export.h \
              -Wb,skel_export_macro=RECEPTACLE_SVNT_Export \
              -Wb,skel_export_include=Receptacle_svnt_export.h \
              -Wb,exec_export_macro=RECEPTACLE_EXEC_Export \
              -Wb,exec_export_include=Receptacle_exec_export.h

  IDL_Files {
    Receptacle.idl
  }
}

project(Receptacle_lem_gen) : ciaoidldefaults {

  after += Receptacle_idl_gen
  custom_only = 1
  idlflags += -Wb,stub_export_macro=RECEPTACLE_LEM_STUB_Export \
              -Wb,stub_export_include=Receptacle_lem_stub_export.h \
              -SS -Gxhst

  IDL_Files {
    ReceptacleE.idl
  }
}

project(Receptacle_lem_stub) : ccm_svnt   {

  after += Receptacle_lem_gen Receptacle_stub
  libs  += Receptacle_stub
  libpaths += ../lib
  libout = ../lib

  sharedname = Receptacle_lem_stub
  dynamicflags = RECEPTACLE_LEM_STUB_BUILD_DLL

  IDL_Files {
  }

  Source_Files {
    ReceptacleEC.cpp
  }

  Header_Files {
    ReceptacleEC.h
    Receptacle_lem_stub_export.h
  }

  Inline_Files {
    ReceptacleEC.inl
  }
}

project(Receptacle_stub) : ccm_stub   {

  after += Receptacle_idl_gen
  libs  +=
  libpaths += ../lib
  libout = ../lib


  sharedname = Receptacle_stub
  dynamicflags = RECEPTACLE_STUB_BUILD_DLL

  IDL_Files {
  }

  Source_Files {
    ReceptacleC.cpp
  }

  Header_Files {
    ReceptacleC.h
    Receptacle_stub_export.h
  }

  Inline_Files {
    ReceptacleC.inl
  }
}

project(Receptacle_exec) : ciao_executor   {

  after   += Receptacle_lem_stub Receptacle_stub
  sharedname = Receptacle_exec
  libs += Receptacle_stub Receptacle_lem_stub
  libpaths += ../lib
  libout = ../lib


  dynamicflags = RECEPTACLE_EXEC_BUILD_DLL

  IDL_Files {
  }

  Source_Files {
    Receptacle_exec.cpp
  }

  Header_Files {
    Receptacle_exec.h
    Receptacle_exec_export.h
  }

  Inline_Files {
  }
}


project(Receptacle_svnt) : ciao_servant   {

  after      += Receptacle_lem_stub
  sharedname  = Receptacle_svnt
  libs       += Receptacle_stub Receptacle_lem_stub
  libpaths += ../lib
  libout = ../lib


  dynamicflags = RECEPTACLE_SVNT_BUILD_DLL

  IDL_Files {
  }

  Source_Files {
    ReceptacleS.cpp
    Receptacle_svnt.cpp
  }

  Header_Files {
    ReceptacleS.h
    Receptacle_svnt.h
    Receptacle_svnt_export.h
  }

  Inline_Files {
    ReceptacleS.inl
  }
}

project (Receptacle_client_test) : ciao_componentserver_stub, ccm_configvalue, ciao_cs_client, ciao_logger {
  after += Receptacle_stub Receptacle_svnt CIF_Common
  libpaths += ../lib
  libs += Receptacle_stub CIF_Common
  includes += ..

  IDL_Files {
  }

  Source_Files {
    client.cpp
  }
}
