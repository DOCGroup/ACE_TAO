#
# Makefile for building	ACE and	TAO
#

!ifndef	BUILD
BUILD =	typical
!endif

!if $(BUILD) ==	minimal

DIRS = \
	..\ace \
	..\ace\SSL \
	..\apps\gperf\src \
	tao \
	TAO_IDL	\
	orbsvcs

!elif $(BUILD) == typical

DIRS = \
	..\ace \
	..\ace\SSL \
	..\apps\gperf\src \
	tao \
	TAO_IDL	\
	orbsvcs	\
	utils

!elif $(BUILD) == all

DIRS = \
	..\ace \
	..\ace\SSL \
	..\apps	\
	..\netsvcs \
	..\tests \
	tao \
	TAO_IDL	\
	orbsvcs	\
	examples \
	tests \
	utils

!else
!error Please set your BUILD variable to one of	"minimal", "typical" or	"all".
!endif

!include <$(ACE_ROOT)\include\makeinclude\recurse.bor>
