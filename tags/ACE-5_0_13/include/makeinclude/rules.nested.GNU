#       Nested directory targets makefile definitions
#----------------------------------------------------------------------------

$(TARGETS_NESTED):
ifneq ($(DIRS),)
  ifeq (Windows,$(findstring Windows,$(OS)))
	@cmd /c "FOR /D %i IN ($(DIRS)) DO $(MAKE) -C %i $(@:.nested=)"
  else  # ! Windows
	@for dir in $(DIRS); do $(MAKE) -C $$dir $(@:.nested=) $(ACE_NESTED_COMMAND); done
  endif # ! Windows
endif # DIRS
