# $Id$
#
# Makefile for building the Interceptors server
#

NAME = server

TAO_IDL = $(CORE_BINDIR)\tao_idl -I../../.. -g $(CORE_BINDIR)\gperf.exe -Ge 1

OBJFILES = \
	$(OBJDIR)\testC.obj \
	$(OBJDIR)\testS.obj \
	$(OBJDIR)\server.obj \
	$(OBJDIR)\test_i.obj \
	$(OBJDIR)\FOO_IORInterceptor.obj \
	$(OBJDIR)\FOO_IORInterceptor_ORBInitializer.obj

CFLAGS = \
	$(ACE_CFLAGS) \
	$(TAO_CFLAGS) \
	$(TAO_PORTABLESERVER_CFLAGS) \
        $(TAO_IORINTERCEPTOR_CFLAGS)

LIBFILES = \
	$(ACE_LIB) \
	$(TAO_LIB) \
	$(TAO_PORTABLESERVER_LIB) \
        $(TAO_IORINTERCEPTOR_LIB)

IDLFILES = \
	$(IDLDIR)\test.idl

CPPDIR = .

IDLDIR = .

!include <$(ACE_ROOT)\include\makeinclude\build_exe.bor>

#
# IDL Build rules
#

$(IDLDIR)\testS.cpp $(IDLDIR)\testC.cpp: $(IDLDIR)\test.idl
	$(TAO_IDL) $**
