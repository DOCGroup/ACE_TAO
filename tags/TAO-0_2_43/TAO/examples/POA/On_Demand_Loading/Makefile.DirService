SHLIB	= libDirService.$(SOEXT) 
	 

FILES 	= Dir_ServiceC Dir_ServiceS Dir_Service_i 
OBJ = $(addsuffix .o,$(FILES))

CPPFLAGS += -I$(TAO_ROOT) 
LDLIBS     =   -lACE  -lTAO
LDFLAGS += -L$(TAO_ROOT)/tao -L$(ACE_ROOT)/ace

LSRC	= $(addsuffix .cpp,$(FILES))

VLDLIBS = $(LDLIBS:%=%$(VAR))


#----------------------------------------------------------------------------
